include ../mixins/message

doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        //- link(rel="stylesheet", href="https://unpkg.com/mvp.css")
        link(rel="stylesheet", href="/static/css/styles.css")
        link(rel="manifest",href="manifest.json")
        title #{pageTitle}| #{siteName}
        block scripts
        script(src="https://kit.fontawesome.com/6478f529f2.js",crossorigin="anonymous")
        <script type="module">
   import 'https://cdn.jsdelivr.net/npm/@pwabuilder/pwaupdate';
   const el = document.createElement('pwa-update');
   document.body.appendChild(el);
</script>
    body
        include ../component/header
        if messages.error 
            +message("error",messages.error)
        if messages.info 
            +message("info",messages.info)
        if messages.success 
            +message("success",messages.success)
        main.main
            block content
        div#limit
            span 모바일로 접속 바랍니다.
        nav.navi
            ul.navi__list
                a.navi__link(href="/stats")
                    i.fas.fa-calendar-alt.fa-2x
                a.navi__link(href="/")
                    i.fas.fa-home.fa-2x
                a.navi__link(href="/ranking")
                    img.rank_img(src="/static/images/podium.svg")